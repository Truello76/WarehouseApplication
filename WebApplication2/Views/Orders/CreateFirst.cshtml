@model WebApplication2.Models.OrdersCreateModel
@{
    ViewData["Title"] = "Dodaj zamówienie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Wybierz klienta i przedmioty</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFirst">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Klient</label>
                <select asp-items="Model.ClientList" asp-for="ClientConfirm" class="selectpicker" data-live-search="true"></select>
                @*<span asp-validation-for="ClientId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">Przedmioty</label>
                <select asp-items="Model.ItemList" asp-for="ItemListConfirm" class="selectpicker" data-live-search="true" multiple></select>
                @*<input asp-for="Address" class="form-control" />*@
                @*<span asp-validation-for="Address" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Dalej" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Wróć do zamówień</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
