@model WebApplication2.Models.OrdersCreateModel
@{
    ViewData["Title"] = "Dodaj zamówienie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSecond">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach(var x in Model.ItemListConfirm){
            <div class="form-group">
                <label class="control-label">@x</label>
                <input asp-for="ItemCountList[Model.ItemListConfirm.IndexOf(x)]" value="@Model.ItemListConfirm.IndexOf(x)" class="form-control" />
                @*<span asp-validation-for="ClientId" class="text-danger"></span>*@
            </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
