@model WebApplication2.Models.Items

@{
    ViewData["Title"] = "Dodaj przedmiot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dodaj przedmiot</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ilość</label>
                <input asp-for="ItemCount" class="form-control" min=0 />
                <span asp-validation-for="ItemCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cena jednostkowa</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kod regału</label>
                <input asp-for="ShelfCode" class="form-control" />
                <span asp-validation-for="ShelfCode" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Fragile" /> Wrażliwe
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Wróć do przedmiotów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
