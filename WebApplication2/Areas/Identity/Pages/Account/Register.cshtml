@page
@model RegisterModel
@{
    ViewData["Title"] = "Dodaj użytkownika";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <h1>Dodaj użytkownika</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Nazwa użytkownika</label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Hasło</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Imię</label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Nazwisko</label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Administrator?</label>
                <input asp-for="Input.Admin" class="form-control" />
                <span asp-validation-for="Input.Admin" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Dodaj</button>
            <a asp-controller="Users" asp-action="Index" class="btn btn-secondary">Wróć do użytkowników</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
